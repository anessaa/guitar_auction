<h1 class="jumbotron" style="font-size: 5em">Create a Guitar Auction</h1>

<%= form_for @guitar do |f| %>
    <% if @guitar.errors.any? %>
    <div>
        <h3>Form is invalid</h3> 
        <ul>
        <% for message in @guitar.errors.full_messages %>
            <li><%= message %></li>
        <% end %>
        </ul>
    </div>
    <% end %>
<div class="jumbotron">
    <div>
        <label>Brand: </label>
        <%= f.text_field :brand %>
    </div>
    <div>
        <label>Style: </label>
        <%= f.text_field :style %>
    </div>
    <div>
        <label>Auction End: </label>  
        <%= f.date_select :auction_end %>
    </div>
    <div>
        <label>Bid Start Amount</label>
        <%= f.text_field :start_bid%>
    </div>
    <div>
        <label>Image: </label>
        <%= f.file_field :image %>
    </div>
    <br>
    <div><%= f.submit 'Create Auction', class:"btn-success" %></div>
    <% end %>
</div>