<h1 class="jumbotron" style="font-size: 5em">Edit Guitar Auction</h1>

<div class="jumbotron" style="text-align:center;">
<%= form_for @guitar, edit_guitar_path, method: :get do |f| %>
    <div>
        <%= f.label :brand %>
        <%= f.text_field :brand %>
    </div>
    <div>
        <%= f.label :style %>
        <%= f.text_field :style %>
    </div>
    <div>
        <%= f.label :start_bid %>
        <%= f.text_field :start_bid %>
    </div>
    <div>
        <%= f.label :auction_end %>
        <%= f.date_select :auction_end %>
    </div>
    <div>
        <%= f.label :image %>
        <%= f.file_field :image %>
    </div>
    <br>
    <%= f.submit "Update", class:"btn btn-success" %> &nbsp;&nbsp;|&nbsp;&nbsp; <%= link_to 'Delete', guitar_path(@guitar), method: :delete, data: { confirm: 'Are you sure you want to delete this auction?' }, class:"btn btn-danger" %>
<% end %>
    <br>
    <br>    
    <%= link_to 'Back', guitars_path %>
</div>